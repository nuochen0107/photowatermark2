{
  "name": "photowatermark2",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "description": "Photo watermark desktop app built with Electron + Vite + React",
  "author": "Nuochen",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "electron:build": "vite build && electron-builder",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "wait-on tcp:5173 && electronmon .",
    "start": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron:dev\""
  },
  "build": {
    "appId": "com.nuochen.photowatermark",
    "productName": "PhotoWatermark",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.1",
    "antd": "^5.15.1",
    "fabric": "^6.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.5",
    "vite-plugin-electron": "^0.28.2",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.1",
    "electronmon": "^2.0.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.1.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  }
}
